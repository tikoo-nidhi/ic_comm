<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:fontFamily="@font/montserrat"
                android:id="@+id/expandableButton_hl_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@color/colorWhite"
                android:drawableRight="@drawable/add_black"
                android:paddingStart="@dimen/ele_padding_left_bt"
                android:paddingLeft="@dimen/ele_padding_left_bt"
                android:paddingEnd="@dimen/ele_padding_bottom_top_tv"
                android:paddingRight="@dimen/ele_padding_bottom_top_tv"
                android:text="Home Appliances"
                android:textAlignment="textStart" />

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expandableLayout_hl_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/expandableButton_hl_1"
                android:background="@color/colorWhite"
                app:ael_duration="200"
                app:ael_interpolator="fastOutLinearIn"
                app:ael_orientation="vertical">

                <TextView
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/el_hl_1_tv_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/ele_padding_left_tv"
                    android:paddingTop="@dimen/ele_padding_bottom_top_tv"
                    android:paddingBottom="@dimen/ele_padding_bottom_top_tv"
                    android:text="Kitchen Appliances"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/ele_text_size_tv" />

                <TextView
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/el_hl_1_tv_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/el_hl_1_tv_1"
                    android:paddingLeft="@dimen/ele_padding_left_tv"
                    android:paddingTop="@dimen/ele_padding_bottom_top_tv"
                    android:paddingBottom="@dimen/ele_padding_bottom_top_tv"
                    android:text="Home Appliances"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/ele_text_size_tv" />


            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>


            <Button
                android:fontFamily="@font/montserrat"
                android:layout_marginTop="@dimen/ele_margin_top_bt"
                android:id="@+id/expandableButton_hl_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@color/colorWhite"
                android:drawableRight="@drawable/add_black"
                android:paddingStart="@dimen/ele_padding_left_bt"
                android:paddingLeft="@dimen/ele_padding_left_bt"
                android:paddingEnd="@dimen/ele_padding_bottom_top_tv"
                android:paddingRight="@dimen/ele_padding_bottom_top_tv"
                android:text="Home D\u00E9cor"
                android:textAlignment="textStart" />

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expandableLayout_hl_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/expandableButton_hl_2"
                android:background="@color/colorWhite"
                app:ael_duration="200"
                app:ael_interpolator="fastOutLinearIn"
                app:ael_orientation="vertical">

                <TextView
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/el_hl_2_tv_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/ele_padding_left_tv"
                    android:paddingTop="@dimen/ele_padding_bottom_top_tv"
                    android:paddingBottom="@dimen/ele_padding_bottom_top_tv"
                    android:text="Paintings"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/ele_text_size_tv" />

                <TextView
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/el_hl_2_tv_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/el_hl_2_tv_1"
                    android:paddingLeft="@dimen/ele_padding_left_tv"
                    android:paddingTop="@dimen/ele_padding_bottom_top_tv"
                    android:paddingBottom="@dimen/ele_padding_bottom_top_tv"
                    android:text="Wall Stickers"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/ele_text_size_tv" />
                <TextView
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/el_hl_2_tv_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/el_hl_2_tv_2"
                    android:paddingLeft="@dimen/ele_padding_left_tv"
                    android:paddingTop="@dimen/ele_padding_bottom_top_tv"
                    android:paddingBottom="@dimen/ele_padding_bottom_top_tv"
                    android:text="Show Pieces"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/ele_text_size_tv" />

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

            <Button
                android:fontFamily="@font/montserrat"
                android:layout_marginTop="@dimen/ele_margin_top_bt"
                android:id="@+id/expandableButton_hl_3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@color/colorWhite"
                android:drawableRight="@drawable/add_black"
                android:paddingStart="@dimen/ele_padding_left_bt"
                android:paddingLeft="@dimen/ele_padding_left_bt"
                android:paddingEnd="@dimen/ele_padding_bottom_top_tv"
                android:paddingRight="@dimen/ele_padding_bottom_top_tv"
                android:text="Home Furnishing"
                android:textAlignment="textStart" />

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expandableLayout_hl_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/expandableButton_hl_3"
                android:background="@color/colorWhite"
                app:ael_duration="200"
                app:ael_interpolator="fastOutLinearIn"
                app:ael_orientation="vertical">

                <TextView
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/el_hl_3_tv_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/ele_padding_left_tv"
                    android:paddingTop="@dimen/ele_padding_bottom_top_tv"
                    android:paddingBottom="@dimen/ele_padding_bottom_top_tv"
                    android:text="Bedsheets &amp; Pillow Covers"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/ele_text_size_tv" />

                <TextView
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/el_hl_3_tv_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/el_hl_3_tv_1"
                    android:paddingLeft="@dimen/ele_padding_left_tv"
                    android:paddingTop="@dimen/ele_padding_bottom_top_tv"
                    android:paddingBottom="@dimen/ele_padding_bottom_top_tv"
                    android:text="Cushions &amp; Pillows"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/ele_text_size_tv" />
                <TextView
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/el_hl_3_tv_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/el_hl_3_tv_2"
                    android:paddingLeft="@dimen/ele_padding_left_tv"
                    android:paddingTop="@dimen/ele_padding_bottom_top_tv"
                    android:paddingBottom="@dimen/ele_padding_bottom_top_tv"
                    android:text="Blankets &amp; Quilts"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/ele_text_size_tv" />

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
        </LinearLayout>


    </ScrollView>

</RelativeLayout>