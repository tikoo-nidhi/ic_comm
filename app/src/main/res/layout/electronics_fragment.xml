<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:fontFamily="@font/montserrat"
                android:id="@+id/bt_ele_laptop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="start"
                android:background="@color/colorWhite"
                android:paddingStart="@dimen/ele_padding_left_bt"
                android:paddingLeft="@dimen/ele_padding_left_bt"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:text="Laptops"
                android:textAlignment="textStart" />

            <Button
                android:fontFamily="@font/montserrat"
                android:id="@+id/bt_ele_mobiles"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_ele_laptop"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/ele_margin_top_bt"
                android:background="@color/colorWhite"
                android:paddingStart="@dimen/ele_padding_left_bt"
                android:paddingLeft="@dimen/ele_padding_left_bt"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:text="Mobiles"
                android:textAlignment="textStart" />


            <Button
                android:fontFamily="@font/montserrat"
                android:id="@+id/expandableButton_ele_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/expandableLayout2"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/ele_margin_top_bt"
                android:background="@color/colorWhite"
                android:drawableRight="@drawable/add_black"
                android:paddingStart="@dimen/ele_padding_left_bt"
                android:paddingLeft="@dimen/ele_padding_left_bt"
                android:paddingEnd="@dimen/ele_padding_bottom_top_tv"
                android:paddingRight="@dimen/ele_padding_bottom_top_tv"
                android:text="Mobile Accessories"
                android:textAlignment="textStart" />

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expandableLayout_ele_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/expandableButton_ele_1"
                android:background="@color/colorWhite"
                app:ael_duration="200"
                app:ael_interpolator="fastOutLinearIn"
                app:ael_orientation="vertical">

                <TextView
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/tv_electronics_ma_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/ele_padding_left_tv"
                    android:paddingTop="@dimen/ele_padding_bottom_top_tv"
                    android:paddingBottom="@dimen/ele_padding_bottom_top_tv"
                    android:text="Cases, Covers &amp; Screen Guards"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/ele_text_size_tv" />

                <TextView
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/tv_electronics_ma_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_electronics_ma_1"
                    android:paddingLeft="@dimen/ele_padding_left_tv"
                    android:paddingTop="@dimen/ele_padding_bottom_top_tv"
                    android:paddingBottom="@dimen/ele_padding_bottom_top_tv"
                    android:text="Head Phones &amp; Ear Phones"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/ele_text_size_tv" />

                <TextView
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/tv_electronics_ma_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_electronics_ma_2"
                    android:paddingLeft="@dimen/ele_padding_left_tv"
                    android:paddingTop="@dimen/ele_padding_bottom_top_tv"
                    android:paddingBottom="@dimen/ele_padding_bottom_top_tv"
                    android:text="Mobile Cables, Selfie Sticks, Memory Cards"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/ele_text_size_tv" />

                <TextView
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/tv_electronics_ma_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_electronics_ma_3"
                    android:paddingLeft="@dimen/ele_padding_left_tv"
                    android:paddingTop="@dimen/ele_padding_bottom_top_tv"
                    android:paddingBottom="@dimen/ele_padding_bottom_top_tv"
                    android:text="Power Banks"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/ele_text_size_tv" />
            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>


            <Button
                android:fontFamily="@font/montserrat"
                android:id="@+id/bt_ele_tablet"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/expandableLayout_ele_1"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/ele_margin_top_bt"
                android:background="@color/colorWhite"
                android:paddingStart="@dimen/ele_padding_left_bt"
                android:paddingLeft="@dimen/ele_padding_left_bt"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:text="Tablet"
                android:textAlignment="textStart"
                android:textColor="@color/colorBlack" />

            <Button
                android:fontFamily="@font/montserrat"
                android:id="@+id/bt_ele_television"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_ele_tablet"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/ele_margin_top_bt"
                android:background="@color/colorWhite"
                android:paddingStart="@dimen/ele_padding_left_bt"
                android:paddingLeft="@dimen/ele_padding_left_bt"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:text="Television"
                android:textAlignment="textStart"
                android:textColor="@color/colorBlack" />

            <Button
                android:fontFamily="@font/montserrat"
                android:id="@+id/bt_ele_speakers"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_ele_television"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/ele_margin_top_bt"
                android:background="@color/colorWhite"
                android:paddingStart="@dimen/ele_padding_left_bt"
                android:paddingLeft="@dimen/ele_padding_left_bt"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:text="Speakers"
                android:textAlignment="textStart"
                android:textColor="@color/colorBlack" />

            <Button
                android:fontFamily="@font/montserrat"
                android:id="@+id/bt_ele_smartWatches"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_ele_speakers"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/ele_margin_top_bt"
                android:background="@color/colorWhite"
                android:paddingStart="@dimen/ele_padding_left_bt"
                android:paddingLeft="@dimen/ele_padding_left_bt"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:text="Smart Watches"
                android:textAlignment="textStart"
                android:textColor="@color/colorBlack" />

            <Button
                android:fontFamily="@font/montserrat"
                android:id="@+id/bt_ele_desktopPc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_ele_smartWatches"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/ele_margin_top_bt"
                android:background="@color/colorWhite"
                android:paddingStart="@dimen/ele_padding_left_bt"
                android:paddingLeft="@dimen/ele_padding_left_bt"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:text="Desktop Pcs"
                android:textAlignment="textStart"
                android:textColor="@color/colorBlack" />

            <Button
                android:fontFamily="@font/montserrat"
                android:id="@+id/expandableButton_ele_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_ele_desktopPc"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/ele_margin_top_bt"
                android:background="@color/colorWhite"
                android:drawableRight="@drawable/add_black"
                android:paddingStart="@dimen/ele_padding_left_bt"
                android:paddingLeft="@dimen/ele_padding_left_bt"
                android:paddingEnd="@dimen/ele_padding_bottom_top_tv"
                android:paddingRight="@dimen/ele_padding_bottom_top_tv"
                android:text="Computer Accessories"
                android:textAlignment="textStart"
                android:textColor="@color/colorBlack" />

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expandableLayout_ele_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/expandableButton3"
                android:background="@color/colorWhite"
                app:ael_duration="200"
                app:ael_interpolator="fastOutLinearIn"
                app:ael_orientation="vertical">

                <TextView
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/tv_electronics_ca_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/ele_padding_left_tv"
                    android:paddingTop="@dimen/ele_padding_bottom_top_tv"
                    android:paddingBottom="@dimen/ele_padding_bottom_top_tv"
                    android:text="Hard Disks, Pen Drives &amp; Memory Cards"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/ele_text_size_tv" />

                <TextView
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/tv_electronics_ca_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_electronics_ca_1"
                    android:paddingLeft="@dimen/ele_padding_left_tv"
                    android:paddingTop="@dimen/ele_padding_bottom_top_tv"
                    android:paddingBottom="@dimen/ele_padding_bottom_top_tv"
                    android:text="Laptop Bags"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/ele_text_size_tv" />

                <TextView
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/tv_electronics_ca_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_electronics_ca_2"
                    android:paddingLeft="@dimen/ele_padding_left_tv"
                    android:paddingTop="@dimen/ele_padding_bottom_top_tv"
                    android:paddingBottom="@dimen/ele_padding_bottom_top_tv"
                    android:text="Mouse"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/ele_text_size_tv" />

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>