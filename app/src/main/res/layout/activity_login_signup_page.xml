<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginSignUpPageActivity"
    android:orientation="vertical"
    android:background="@color/colorWhite">


    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:src="@drawable/iclogo_png"/>
    
    
    <TextView
        android:fontFamily="@font/montserrat"
        android:textColor="@color/colorBlack"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:text="Login or Sign Up to manage your orders"
        android:gravity="center_horizontal" />
    

    
    <LinearLayout
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:id="@+id/tv_logIn"
            android:fontFamily="@font/montserrat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="LogIn"
            android:textColor="@color/colorLogoBlue"
            android:textSize="18sp"
            android:padding="7dp"
            />
        
        <View
            android:layout_width="4px"
            android:layout_height="match_parent"
            android:background="@color/colorSeparator"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/tv_signUp"
            android:fontFamily="@font/montserrat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SignUp"
            android:textColor="@color/colorLogoBlue"
            android:textSize="18sp"
            android:padding="7dp"
            />
    </LinearLayout>
    
    
    <TextView
        android:visibility="gone"
        android:fontFamily="@font/montserrat"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorBlack"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:text="To pay for this particular order"
        android:gravity="center_horizontal" />
    
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_guestCheckOut"
        android:fontFamily="@font/montserrat"
        android:textAlignment="center"
        android:textColor="@color/colorLogoBlue"
        android:textSize="18sp"
        android:padding="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guest Checkout"
        android:gravity="center_horizontal" />

</LinearLayout>