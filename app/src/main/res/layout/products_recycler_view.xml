<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frameLayoutWish"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_discount_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/round_circle"
        android:elevation="5dp"
        android:gravity="center"
        android:text="25%\noff"
        android:textColor="@color/colorWhite"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/ids"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/wish_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgView_cancel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:elevation="20dp"
        android:padding="10dp"
        android:src="@drawable/ic_error" />

    <LinearLayout
        android:id="@+id/linearProduct_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <android.support.v7.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgView_prodImg_1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/wish_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_prodSeller_1"
                        android:layout_width="179dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat"
                        android:padding="5dp"
                        android:text="Puma"
                        android:textSize="13sp" />

                    <CheckedTextView
                        android:id="@+id/checkedTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkMark="@drawable/ic_wishlist_hollow_products"
                        android:checked="false"
                        android:padding="10dp"
                        android:text="" />

                    <ImageView
                        android:id="@+id/imgView_prod_wish_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:src="@drawable/ic_wishlist_hollow_products" />
                </LinearLayout>

                <TextView
                    android:textColor="@color/colorBlack"
                    android:id="@+id/tv_prodName_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Shirt"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/tv_prodDiscountPrice_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="\u20B9500.00"
                        android:textColor="@color/colorBlack"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_prodActualPrice_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:text="\u20B9500.00"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">


                    <TextView
                        android:id="@+id/tv_prodRating_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorGreen"
                        android:drawableRight="@drawable/ic_star_black_24dp"
                        android:drawablePadding="5dp"
                        android:padding="5dp"
                        android:text="4.5"
                        android:textColor="@color/colorWhite" />

                    <Button
                        android:id="@+id/bt_addToCart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorLogoBlue"
                        android:text="Add to Cart"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2px"
                    android:layout_marginTop="8dp"
                    android:background="#BEBBBB"
                    android:visibility="gone" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="#BEBBBB"
            android:visibility="gone" />
    </LinearLayout>


</FrameLayout>